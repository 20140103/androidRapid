<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:item="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.framework.widget.PtrlMeiTuanFrameLayout
        android:id="@+id/rotate_header_web_view_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lang.widgets.CustomScrollView
            android:id="@+id/mScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.lang.widgets.banner.BannerView
                    android:id="@+id/mBannerView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y400" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="新手专享"
                    android:layout_margin="@dimen/x20"
                    android:textSize="@dimen/x40"/>
                <View
                    style="@style/Divider"/>
                <com.lang.xjd.ui.main.view.ChoiceProductLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                </com.lang.xjd.ui.main.view.ChoiceProductLinearLayout>
                <com.lang.widgets.SimpleListItem
                    android:id="@+id/item_pwdAgain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y30"
                    item:titleText="精选理财"
                    item:titleTxtSize="@dimen/x40"
                    item:contentText="查看全部产品"
                    item:arrowDisplay="true"
                    item:bottomLine="SOLID"/>
                <com.lang.xjd.ui.main.view.ChoiceProductLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
                <com.lang.xjd.ui.main.view.ChoiceProductLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
                <com.lang.xjd.ui.main.view.ChoiceProductLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
                <com.lang.xjd.ui.main.view.ChoiceProductLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
                <com.lang.xjd.ui.main.view.ChoiceProductLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecyclerView_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/red_light"/>

            </LinearLayout>
        </com.lang.widgets.CustomScrollView>
    </com.framework.widget.PtrlMeiTuanFrameLayout>
    <LinearLayout
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/base_toolbar"/>
        <View
            style="@style/Divider"/>
    </LinearLayout>
</RelativeLayout>


