<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y90"
    android:background="@drawable/item_selector"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1">

        <View
            android:id="@+id/top_solid_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_divide" />

        <View
            android:id="@+id/top_dot_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/gray_divide" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="@dimen/x44"
                android:layout_height="@dimen/y44"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_itemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/title_txt"
                android:textSize="@dimen/x30"
                tools:text="TILE" />

            <EditText
                android:id="@+id/et_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_itemContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/content_txt"
                android:textSize="@dimen/x30"
                tools:text="content" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/y44"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/liebiaojiantou" />

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/y44"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/delete"
                    android:visibility="gone" />
            </FrameLayout>


        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1">

        <View
            android:id="@+id/bottom_solid_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_divide" />

        <View
            android:id="@+id/bottom_dot_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/gray_divide" />
    </FrameLayout>
</LinearLayout>