<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/sort_key_layout"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/y80"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:background="@color/white">
		<ImageView
			android:id="@+id/img_sort_key"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/product_list_current"
			android:paddingLeft="@dimen/x30"
			android:paddingRight="@dimen/x30"/>

		<TextView
			android:id="@+id/sort_key"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="免费随时领取"/>
	</LinearLayout>
	<View style="@style/Divider"/>
	<LinearLayout
		android:id="@+id/ly_detail"
		android:layout_width="fill_parent"
		android:layout_height="130dip"
		android:gravity="center"
		android:background="@drawable/item_invest_selector">
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			android:paddingLeft="@dimen/x40">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="4.06%"
				android:textColor="@color/orange"
				android:textSize="@dimen/x50"
				android:paddingBottom="@dimen/y20"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="预期年化收益率"/>

		</LinearLayout>
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1.3">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="3个月定期"
				android:paddingBottom="@dimen/y20"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="预期年化收益率"
				android:paddingLeft="@dimen/x10"
				android:paddingRight="@dimen/x10"
				android:paddingTop="@dimen/y5"
				android:paddingBottom="@dimen/y5"
				android:layout_marginBottom="@dimen/y20"
				android:textColor="@color/blue"
				android:background="@drawable/hollow_shape"/>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="已售57%"
					android:textColor="@color/orange"
					android:layout_marginRight="@dimen/x15"/>
				<ProgressBar
					android:id="@+id/mWidgetProgressbar"
					android:layout_width="@dimen/x200"
					android:layout_height="@dimen/y3"
					android:layout_centerVertical="true"
					android:layout_marginRight="@dimen/x20"
					android:textSize="13sp"
					android:max="100"
					android:progress="57"
					style="?android:attr/progressBarStyleHorizontal"
					android:progressDrawable="@drawable/bar_color"/>
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>
	<View style="@style/Divider"/>
	<FrameLayout
		android:id="@+id/fl_more"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/item_invest_selector"
		android:layout_marginBottom="@dimen/y40">
		<TextView
			android:id="@+id/tv_more"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="更多"
			android:drawableRight="@drawable/liebiaojiantou"
			android:drawablePadding="@dimen/x15"
			android:padding="@dimen/x20"/>
	</FrameLayout>

</LinearLayout>